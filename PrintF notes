import static java.lang.System.*;
import java.util.*;
public class printF {
	public static void main(String[] args) {		
		//there is a way to just print a specific modifiable length for what you want, that if printF / print format
		
		// %[flags][width][.precision][specifier-character]
		
		//Specifier variables and actual variable types
		String name = "Billy Bob";// s
		Character firstLetter = 'B';// c
		int age = 67;// d
		double height = 60.7; // f
		boolean hasJob = true;// b
		
		out.printf("Hello %s.", name);//the % is a placeholder for the variable, while s is a specifier character for String
		out.println();//You have to insert newline characters for printF statements
		out.printf("%s's name starts with a %c.\n", name, firstLetter);//Same concept, but you have a c for chars
		out.printf("%s is %d years old.\n", name, age);//For some reason integers are d. IDK
		out.printf("%s is %f inches tall.\n", name, height);//For some reason doubles are f. This prints the double with 0's. Ill get to that in a bit
		out.printf("Employed: %b.\n", hasJob);//This one makes sense
		
		//For precision, you can limit the amount of displayed digits
		
		//Normally for floating point numbers(like doubles according to google), there is usually 6 digits after the decimal
		double food1 = 99.99;
		double food2 = 043.21;
		double food3 = 067.67;
		out.printf("Food 1 costs %f\n", food1);
		out.printf("Food 2 costs %f\n", food2);//The front zeros got cut off for this one 
		out.printf("Food 3 costs %f\n", food3);//And this one as well
		//to make it display 1 digit, do this
		out.printf("Food 1 costs %.1f\n", food1);//this one, as 99.99 when only showing the first digit will get rounded up
		out.printf("Food 2 costs %.1f\n", food2);
		out.printf("Food 3 costs %.1f\n", food3);//this got rounded as well
		
		//for flags, you can put many different signs in front of the precision
		
		// + means you add a + in front of positive numbers
		// , means a comma for grouping/separating
		// ( means a negative number that is enclosed in ()
		// space means you display a - sign when negative and a space if positive
		
		double food4 = 99000.99;
		double money = -67.67;
		
		out.printf("Food 1 costs %+.2f\n", food4);//puts the plus
		out.printf("Food 1 costs %,.2f\n", food4);//puts the comma grouping
		out.printf("Food 1 costs %(.2f\n", money);
		out.printf("Food 1 costs % .2f\n", food1);
		out.printf("Food 1 costs % .2f\n", money);
		
		//for width, you can also do stuff with padding
		
		//By putting a 0 in front of the precision(after the flag) you can make a padding of 0's
		//with a number, you can right justify pad it
		//With a negative number, you can left justify
		
		int id1 = 0;
		int id2 = 12;
		int id3 = 345;
		int id4 = 6789;
		
		out.printf("ID 1 is %05d\n", id1);//padded with 5 0's. Max length is 5
		out.printf("ID 2 is %05d\n", id2);//padded with 3 0's. Max length is 5
		out.printf("ID 3 is %5d\n", id3);//this is padded with 2 space, since 5-3(length of id) is 1
		out.printf("ID 4 is %-5d\n", id4);//This is aligned to the lift with 1 space
	}
}
